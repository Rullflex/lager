			//- href = id попапа + data-uk-toggle	
			a(href="#video60" data-uk-toggle)

			//- картинка внутри блока абсолютная и занимает 100% пространства не изменяя своих пропорций			
			.ibg 
				+picture(png, `${assets}some-img`, 'sl')

			//- picture
			//- в папке src/assets/images/ лежат 2 картинки: some-img-sm.png и some-img-lg.png
			+picture(png, `${assets}some-img`, 'sl') 
			//- в папке src/assets/images/ лежит 1 картинка: some-img.jpg
			+picture(jpg, `${assets}some-img`, 'n')
